/* pages/homepage/homepage.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 180rpx;
  width: 95%;
  margin-top: 20rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
  background-color: whitesmoke;
  border: solid;
  border-radius: 10px;
  border-width: 0;
}

.login::after{
  border: none;
}

.login{
  height: 100rpx;
  width: 150rpx;
  border-radius: 10px;
  margin-top: 40rpx;
  background: transparent;
  border: none;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 26rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color:black;
  font-size: 40rpx;
  font-family: cursive;
  padding-top: 20rpx;
}

.detailedInformation{
  display: flex;
  flex-direction: row;
}

.nickname{
  display: flex;
  flex-direction: column;
  height: 180rpx;
  width: 300rpx;
  margin: auto;
  align-items: center;
  justify-self: center;
}
.address{
  display: flex;
  flex-direction: column;
  height: auto;
  width: 95%;
  margin-left: 2.5%;
  margin-right: 2.5%;
  margin-top: 30rpx;
  background-color: whitesmoke;
  border: solid;
  border-radius: 10px;
  border-width: 0;
}

.management_add{
  height:60rpx;
  width: 90%;
  margin: 10rpx auto; 
  justify-content: space-between;
  display: flex;
  flex-direction: row;
}

.addAddress{
  height: auto;
  width: 150rpx;
  font-size: 25rpx;
  background: green;
  color: white;
}

.addressManagement{
  height: 50rpx;
  width: 500rpx;
  font-size: 25rpx;
  display: flex;
  margin: 0rpx auto;
  justify-content: space-between;
  padding-top: 20rpx;
  color: gray;
}

.input_del{
  height: 50rpx;
  width: 95%;
  display: flex;
  flex-direction: row;
  margin: 10rpx auto;
  align-content: space-between;
}

.addressInput{
  height: 40rpx;
  width: 550rpx;
  margin: 5rpx 0rpx;
  font-size: 30rpx;
  display: flex;
  padding: 5rpx 5rpx 5rpx 10rpx;
  border: solid;
  border-width: 0.5rpx;
  border-radius: 5px;
}

.delAddress{
  height: 50rpx;
  width: 100rpx;
  font-size: 20rpx;
